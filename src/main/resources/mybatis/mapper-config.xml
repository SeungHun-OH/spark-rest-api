<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
  <settings>

    <setting name="mapUnderscoreToCamelCase" value="true"/>
    <setting name="jdbcTypeForNull" value="NULL" />

    <!-- dto 소문자 언더바 -> 테이블 칼럼 대문자 언더바 매핑 -->
    <setting name="useColumnLabel" value="true" />

  </settings>

  <typeAliases>
    <typeAlias type="com.spark.dating.dto.feed.Feed" alias="Feed"/>
    <typeAlias type="com.spark.dating.dto.feed.FeedPicture" alias="FeedPicture"/>
    <typeAlias type="com.spark.dating.dto.hearts.Hearts" alias="Hearts"/>
    <typeAlias type="com.spark.dating.dto.matching.Matching" alias="Matching"/>
    <typeAlias type="com.spark.dating.dto.chat.ChatRoom" alias="ChatRoom"/>
    <typeAlias type="com.spark.dating.dto.member.Member" alias="Member"/>
    <typeAlias type="com.spark.dating.dto.member.MemberForFeed" alias="MemberForFeed"/>
    <typeAlias type="com.spark.dating.dto.member.MemberPicture" alias="MemberPicture"/>
    <typeAlias type="com.spark.dating.dto.member.MemberCategory" alias="MemberCategory"/>

    <typeAlias type="com.spark.dating.dto.member.request.MemberLoginRequest" alias="MemberLoginRequest"/>
    <typeAlias type="com.spark.dating.dto.member.response.PreferenceCategory" alias="PreferenceCategory"/>
    <typeAlias type="com.spark.dating.dto.member.response.PreferenceResponse" alias="PreferenceResponse"/>

    <typeAlias type="com.spark.dating.dto.thread.ThreadBoard" alias="ThreadBoard"/>
    <typeAlias type="com.spark.dating.dto.thread.response.ThreadBoardResponse" alias="ThreadBoardResponse"/>

    <typeAlias type="com.spark.dating.dto.thread.BoardReply" alias="BoardReply"/>
    <typeAlias type="com.spark.dating.dto.thread.response.BoardReplyResponse" alias="BoardReplyResponse"/>

  </typeAliases>

</configuration>