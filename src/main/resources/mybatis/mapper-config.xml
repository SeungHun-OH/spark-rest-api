<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
  <settings>

    <setting name="mapUnderscoreToCamelCase" value="true"/>
    <setting name="jdbcTypeForNull" value="NULL" />

    <!-- dto 소문자 언더바 -> 테이블 칼럼 대문자 언더바 매핑 -->
    <setting name="useColumnLabel" value="true" />
    
  </settings>

  <typeAliases>
    <typeAlias type="com.spark.dating.dto.Test" alias="Test"/>
    <typeAlias type="com.spark.dating.dto.chat.ChatRoom" alias="ChatRoom"/>
    <typeAlias type="com.spark.dating.dto.member.Member" alias="Member"/>
    <typeAlias type="com.spark.dating.dto.member.MemberPicture" alias="MemberPicture"/>
  </typeAliases>

</configuration>