<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.spark.dating.feed.FeedDao">

  <!--ResultMap-->
  <resultMap id="feedWithPictureMap" type="Feed">
    <id property="f_no" column="f_no"/>
    <result property="f_memberno" column="f_memberno"/>
    <result property="f_content" column="f_content"/>
    <result property="f_date" column="f_date"/>
    <association property="feedPicture" javaType="FeedPicture">
        <id property="fp_no" column="fp_no"/>
        <result property="fp_attachdata" column="fp_attachdata"/>
        <result property="fp_attachtype" column="fp_attachtype"/>
        <result property="fp_attachoname" column="fp_attachoname"/>
    </association>
  </resultMap>

  <!--구현-->
  <insert id="create"
          parameterType="Feed">
    <selectKey keyProperty="f_no" resultType="int" order="BEFORE">
      SELECT f_no_seq.NEXTVAL FROM dual
    </selectKey>
    INSERT INTO feed (f_no, f_memberno, f_content, f_date)
    VALUES (#{f_no}, #{f_memberno}, #{f_content}, SYSDATE)
  </insert>

  <select id="selectByFno" parameterType="int" resultMap="feedWithPictureMap">
    SELECT f.f_no, f.f_memberno, f.f_content, f.f_date,
           p.fp_no, p.fp_attachdata, p.fp_attachtype, p.fp_attachoname
    FROM feed f
    LEFT JOIN feedpicture p ON f.f_no = p.fp_feedno
    WHERE f.f_no = #{f_no}
  </select>

  <select id="selectAllByMno" parameterType="int" resultType="Feed">
    SELECT f_no, f_memberno, f_content, f_date
    FROM feed
    WHERE f_memberno = #{f_memberno}
  </select>

  

</mapper>