<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.spark.dating.feed.FeedPictureDao">

  <!--ResultMap-->
  <!-- 
  <resultMap id="feedPictureBase" type="FeedPicture">
    <id property="fp_no" column="fp_no"/>
    <result property="fp_feedno" column="fp_feedno"/>
    <result property="fp_attachtype" column="fp_attachtype"/>
    <result property="fp_attachoname" column="fp_attachoname"/>
    <result property="fp_attachdata" column="fp_attachdata"/>
  </resultMap>
  -->

  <!--구현-->
  <insert id="create"
    parameterType="FeedPicture">
    <selectKey keyProperty="fpNo" resultType="int" order="BEFORE"> 
      SELECT fp_no_seq.NEXTVAL FROM dual 
    </selectKey> 
    INSERT INTO feedPicture (fp_no, fp_feedno, fp_attachtype, fp_attachoname, fp_attachdata) 
    VALUES (#{fpNo}, #{fpFeedNo}, #{fpAttachtype}, #{fpAttachoname}, #{fpAttachdata})
  </insert>

  <select id="selectByFno"
    parameterType="int"
    resultType="FeedPicture"> 
    SELECT fp_no, fp_feedno, fp_attachtype, fp_attachoname, fp_attachdata
    FROM feedPicture WHERE fp_feedno = #{fpFeedNo} 
  </select>

  <select id="selectByFpno"
    parameterType="int"
    resultType="FeedPicture"> 
    SELECT fp_no, fp_feedno, fp_attachtype, fp_attachoname, fp_attachdata
    FROM feedPicture WHERE fp_no = #{fpNo} 
  </select>

  <delete id="delete"
          parameterType="int">
    DELETE FROM feedPicture
    WHERE fp_feedno = #{fpFeedNo}
  </delete>
</mapper>