<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.spark.dating.chat.dao.StompDao">

<select id="isMemberExist" parameterType="String" resultType="int">
    SELECT
        CASE
            WHEN EXISTS (SELECT 1 FROM MEMBER WHERE M_ID = #{memberId})
        THEN 1 ELSE 0
        END as member_exist
    FROM DUAL
</select>


</mapper>